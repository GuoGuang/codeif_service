<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ibole.tweets.dao.TweetsDao" >

    <update id="updateTweetsStatus" parameterType="com.ibole.pojo.tweets.Tweets">
        update tc_tweets
        <set>
          <if test="visitsCount != null ">
              visits_count = visits_count + 1
          </if>
          <if test="thumbUpCount != null ">
              thumb_up_count = thumbUpCount + 1
          </if>
          <if test="shareCount != null ">
              share_count = shareCount + 1
          </if>
          <if test="replyCount != null ">
              reply_count = replyCount + 1
          </if>
        </set>
        where id = #{id}
    </update>

</mapper>